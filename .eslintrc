{
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": [2, "never"],
    "react/jsx-no-bind": 0,
    "no-else-return": 0,
    "arrow-body-style": 0,
    "no-console": 0,
    "react/prefer-stateless-function": 0,
    "import/no-unresolved": [
      2, { "ignore": ["^meteor/"] }
    ],
    "no-underscore-dangle": 0,
    "arrow-parens": [1, "as-needed"],
    "consistent-return": 0
  }
}
